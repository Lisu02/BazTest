<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonsolaActivity">

    <Button
        android:id="@+id/listaZawodnikow"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="400dp"
        android:text="Lista Zawodnikow"
        app:layout_constraintBottom_toTopOf="@+id/wrocKonsola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.522" />

    <Button
        android:id="@+id/wyswietl_cytat"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:text="Wyświetl cytat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edytowanieZawodnika"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:text="Edytuj zawodnika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wyswietl_cytat" />

    <Button
        android:id="@+id/wrocKonsola"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginBottom="60dp"
        android:text="Wróć"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dodawanieZawodow"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="76dp"
        android:text="Dodaj Zawody"
        app:layout_constraintEnd_toStartOf="@+id/wyswietl_cytat"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dodawanieZawodnika"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="108dp"
        android:text="Dodaj zawodnika"
        app:layout_constraintEnd_toStartOf="@+id/edytowanieZawodnika"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dodawanieZawodow" />

</androidx.constraintlayout.widget.ConstraintLayout>